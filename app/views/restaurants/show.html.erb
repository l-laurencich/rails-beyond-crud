<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<div>
  <%= link_to "See Restaurants Chef", chef_restaurant_path(@restaurant) %>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>

<p><strong>Reviews</strong></p>
<%= link_to "Write new review", new_restaurant_review_path(@restaurant) %>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>
    <%= link_to "Delete", 
    review_path(review),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
    
  <% end %>
</ul>
<br>

